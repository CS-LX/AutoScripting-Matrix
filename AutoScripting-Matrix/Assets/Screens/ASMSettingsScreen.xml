<ASMSettingsScreen xmlns="runtime-namespace:Game">

  <ASMatrixWaveWidget />

  <StackPanelWidget Direction="Horizontal">

    <CanvasWidget Name="TopBar" Style="{Widgets/ASMTopBarContents}" >
      <LabelWidget Name="TopBar.Label" Text="设置矩阵电路系统" />
    </CanvasWidget>

    <CanvasWidget Margin="10, 20">
      <RectangleWidget FillColor="0, 0, 0, 192" OutlineColor="128, 128, 128, 128" />
      <ScrollPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="3, 3">
        <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

          <LabelWidget Text="界面设置"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20, 0" Color="255, 255, 170"/>

          <UniformSpacingPanelWidget Direction="Horizontal" Margin="0, 3">
            <LabelWidget Text="对话框显示背景矩形"  HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
            <BevelledButtonWidget Name="DisplayBackRect" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" Margin="20, 0" />
          </UniformSpacingPanelWidget>

          <CanvasWidget Size="0, 40" />
          <LabelWidget Text="调试设置"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20, 0" Color="255, 255, 170"/>

          <UniformSpacingPanelWidget Direction="Horizontal" Margin="0, 3">
            <LabelWidget Text="左上角显示调试信息"  HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
            <BevelledButtonWidget Name="DisplayUpperLeft" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" Margin="20, 0" />
          </UniformSpacingPanelWidget>

          <UniformSpacingPanelWidget Direction="Horizontal" Margin="0, 3">
            <LabelWidget Text="调试辅助绘制（Gizmos）"  HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
            <BevelledButtonWidget Name="GizmosEnable" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" Margin="20, 0" />
          </UniformSpacingPanelWidget>

          <CanvasWidget Size="0, 40" />
          <LabelWidget Text="端口矩阵显示设置"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20, 0" Color="255, 255, 170"/>

          <UniformSpacingPanelWidget Direction="Horizontal" Margin="0, 3">
            <LabelWidget Text="显示元件端口矩阵"  HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
            <BevelledButtonWidget Name="DisplayConnectorMatrix" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" Margin="20, 0" />
          </UniformSpacingPanelWidget>

          <UniformSpacingPanelWidget Direction="Horizontal" Margin="0, 3">
            <LabelWidget Text="显示背面端口"  HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
            <BevelledButtonWidget Name="DisplayConnectorMatrix.DisplayIn" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" Margin="20, 0" />
          </UniformSpacingPanelWidget>

          <UniformSpacingPanelWidget Direction="Horizontal" Margin="0, 3">
            <LabelWidget Text="边框厚度"  HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
            <SliderWidget Name="DisplayConnectorMatrix.Thickness" Size="Infinity, 60" VerticalAlignment="Center" Margin="20, 0" />
          </UniformSpacingPanelWidget>

          <CanvasWidget Size="0, 40" />
          <LabelWidget Text="方块设置"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20, 0" Color="255, 255, 170"/>

          <UniformSpacingPanelWidget Direction="Horizontal" Margin="0, 3">
            <LabelWidget Text="转移/变换板音量"  HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
            <SliderWidget Name="TPPlateVolume" Size="Infinity, 60" VerticalAlignment="Center" Margin="20, 0" />
          </UniformSpacingPanelWidget>

        </StackPanelWidget>
      </ScrollPanelWidget>
    </CanvasWidget>

  </StackPanelWidget>

</ASMSettingsScreen>