<CanvasWidget xmlns="runtime-namespace:Game" Size="600, 400" ClampToBounds="true" HorizontalAlignment="Center" VerticalAlignment="Center">
	<RectangleWidget Name="BackRect"  FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" OutlineThickness="2"/>
	<StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="10, 10">
		<LabelWidget Text="编辑真值表" Color="255, 255, 255" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="0, 5"/>
		<CanvasWidget HorizontalAlignment="Center" VerticalAlignment="Near" Margin="0, 4">
			<GridPanelWidget Name="ElementsDisplay" HorizontalAlignment="Center" VerticalAlignment="Center" RowsCount="4" ColumnsCount="4" />
			<ScrollPanelWidget Direction="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
				<GridPanelWidget Name="InputMatrix" RowsCount="16" ColumnsCount="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
			</ScrollPanelWidget>
		</CanvasWidget>
		<LabelWidget Text="上一输出: " Name="LastOutputText" Color="255, 255, 255" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="0, 5"/>
		<StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Far" Margin="0, 5">
			<BevelledButtonWidget Name="OKButton" Text="确定" Style="{Styles/ButtonStyle_160x60}" Margin="40, 0"/>
			<BevelledButtonWidget Name="CancelButton" Text="取消" Style="{Styles/ButtonStyle_160x60}" Margin="40, 0"/>
		</StackPanelWidget>
	</StackPanelWidget>
</CanvasWidget>
