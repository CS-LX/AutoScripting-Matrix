<CanvasWidget xmlns="runtime-namespace:Game">

  <CanvasWidget Size="500, 360" ClampToBounds="true" HorizontalAlignment="Center" VerticalAlignment="Center">
    <RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" OutlineThickness="2" />
    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="0, 15">
      
      <LabelWidget  Text="调整穿线块类别" HorizontalAlignment="Center"/>

      <CanvasWidget Size="0, Infinity" />

      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
        <BevelledButtonWidget Style="{Styles/ButtonStyle_ArrowLeft}" Name="LeftButton" VerticalAlignment="Center"/>
        <CanvasWidget Size="10, 0" />
        <CanvasWidget Size="200, 200" VerticalAlignment="Center">
          <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center">
            <LabelWidget Name="BlockName"  HorizontalAlignment="Center"/>
            <CanvasWidget Size="Infinity, 10" />
            <BlockIconWidget Name="BlockIcon" Size="112, 112" HorizontalAlignment="Center" VerticalAlignment="Center" />
          </StackPanelWidget>
        </CanvasWidget>
        <CanvasWidget Size="10, 0" />
        <BevelledButtonWidget Style="{Styles/ButtonStyle_ArrowRight}" Name="RightButton" VerticalAlignment="Center"/>
      </StackPanelWidget>

      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
        <BevelledButtonWidget Name="EditAdjustableDelayGateDialog.OK" Style="{Styles/ButtonStyle_160x60}" Text="[EditAdjustableDelayGateDialog:2]" Margin="20, 0" />
        <BevelledButtonWidget Name="EditAdjustableDelayGateDialog.Cancel" Style="{Styles/ButtonStyle_160x60}" Margin="20, 0" Text="[EditAdjustableDelayGateDialog:3]"/>
      </StackPanelWidget>

    </StackPanelWidget>
  </CanvasWidget>

</CanvasWidget>
